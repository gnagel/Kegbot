<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @drinks.object %>
    <h1>Edit <%= @drinks.pour_timestamp%></h1>
    <%= link_to "Delete", :action => :delete, :id => @drinks.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @drinks.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Pour timestamp: </td>
              <td class="itemValue"><input type="text" name="drinks[pour_timestamp]" value="<%= @drinks.pour_timestamp %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Duration sec: </td>
              <td class="itemValue"><input type="text" name="drinks[duration_sec]" value="<%= @drinks.duration_sec %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Volume ml: </td>
              <td class="itemValue"><input type="text" name="drinks[volume_ml]" value="<%= @drinks.volume_ml %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Url: </td>
              <td class="itemValue"><input type="text" name="drinks[url]" value="<%= @drinks.url %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Ticks: </td>
              <td class="itemValue"><input type="text" name="drinks[ticks]" value="<%= @drinks.ticks %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Session: </td>
              <td class="itemValue"><input type="text" name="drinks[session_id]" value="<%= @drinks.session_id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Status: </td>
              <td class="itemValue"><input type="text" name="drinks[status]" value="<%= @drinks.status %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
