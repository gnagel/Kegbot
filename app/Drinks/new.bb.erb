<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Drinks</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @drinks.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Pour timestamp: </td>
                <td class="itemValue"><input type="text" name="drinks[pour_timestamp]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Duration sec: </td>
                <td class="itemValue"><input type="text" name="drinks[duration_sec]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Volume ml: </td>
                <td class="itemValue"><input type="text" name="drinks[volume_ml]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Url: </td>
                <td class="itemValue"><input type="text" name="drinks[url]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Ticks: </td>
                <td class="itemValue"><input type="text" name="drinks[ticks]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Session: </td>
                <td class="itemValue"><input type="text" name="drinks[session_id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Status: </td>
                <td class="itemValue"><input type="text" name="drinks[status]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
