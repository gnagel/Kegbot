<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Drink</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @drink.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Duration: </td>
                <td class="itemValue"><input type="text" name="drink[duration]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Volume ml: </td>
                <td class="itemValue"><input type="text" name="drink[volume_ml]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Pour time: </td>
                <td class="itemValue"><input type="text" name="drink[pour_time]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Url: </td>
                <td class="itemValue"><input type="text" name="drink[url]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
